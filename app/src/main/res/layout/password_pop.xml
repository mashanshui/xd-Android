<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500dp"
    android:layout_height="400dp">

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="#eaeff2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入管理员密码"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:layout_marginTop="40dp"/>

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/password_tv_1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="24sp"/>
            <TextView
                android:id="@+id/password_tv_2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="24sp"/>
            <TextView
                android:id="@+id/password_tv_3"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="24sp"/>
            <TextView
                android:id="@+id/password_tv_4"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="24sp"/>
            <TextView
                android:id="@+id/password_tv_5"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="24sp"/>
            <TextView
                android:id="@+id/password_tv_6"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="24sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/input_tv_0"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:text="0"
                android:gravity="center"/>
            <TextView
                android:id="@+id/input_tv_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:text="1"
                android:gravity="center"/>
            <TextView
                android:id="@+id/input_tv_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:text="2"
                android:gravity="center"/>
            <TextView
                android:id="@+id/input_tv_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:text="3"
                android:gravity="center"/>
            <TextView
                android:id="@+id/input_tv_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:text="4"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/input_tv_5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:text="5"
                android:gravity="center"/>
            <TextView
                android:id="@+id/input_tv_6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:text="6"
                android:gravity="center"/>
            <TextView
                android:id="@+id/input_tv_7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:text="7"
                android:gravity="center"/>
            <TextView
                android:id="@+id/input_tv_8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:text="8"
                android:gravity="center"/>
            <TextView
                android:id="@+id/input_tv_9"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:text="9"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/btn_click_cancel"/>
            <Button
                android:id="@+id/sure_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="80dp"
                android:background="@mipmap/btn_click_sure"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
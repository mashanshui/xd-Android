<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    tools:context=".Activity.FaceActivity">

    <!-- 显示预览图形 -->
    <RelativeLayout
        android:layout_width="862dp"
        android:layout_height="467dp"
        android:layout_centerInParent="true"
        android:background="@mipmap/face_bg">
        <cn.edu.ahnu.wjcy.myapplication.view.camera.CameraContainer
            android:id="@+id/container"
            android:layout_width="398dp"
            android:layout_height="317dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="45dp"
            android:layout_alignParentRight="true"/>
        <RelativeLayout
            android:layout_width="398dp"
            android:layout_height="317dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="45dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/photo_bg">
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="20dp"
        android:background="@mipmap/btn_cancel"
        android:layout_marginTop="150dp" />
</RelativeLayout>
